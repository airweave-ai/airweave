# Dockerfile.qdrant
# Extends the official Qdrant image and adds curl for healthchecks

ARG BASE_IMAGE=qdrant/qdrant:latest
FROM ${BASE_IMAGE}

# Install curl for healthcheck
USER root
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Don't switch user - let the base image entrypoint handle it
